<div class="modal" id="removeCageModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <div class="row">
            <h4>Removing this cage will also remove any mice inside. Are you sure you want to delete this cage?</h4>
        </div>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <%= link_to "Yes I'm Sure", cage_path(:cage => {:id => @cage.id, :in_use => false}), :method => :put, :class => "btn btn-sm btn-success float-left", :id => "removeCageConfirm" %>
        <button class="btn btn-sm btn-danger float-right" id="removeCageStop" data-dismiss="modal">No, I changed my mind</button>
      </div>

    </div>
  </div>
</div>