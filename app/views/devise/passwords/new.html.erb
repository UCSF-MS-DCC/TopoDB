
<div class="container-fluid">

  <div class="row justify-content-md-center">

    <div class="col-4">

      <div class="container-fluid devise-input-form-container">

        <h2 class="text-center font-weight-bold">Forgot your password?</h2>

        <br>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="row form-group">
 
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.label :email, :class => "col-3 col-form-label" %><br />
            <div class="col-9">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
            </div>
          </div>
          <br>
          <div class="row justify-content-md-center"> 
            <div class="actions">
              <%= f.submit "Send me reset password instructions", :class=>"btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
        <div class="row justify-content-md-center" style="padding:2%;">
          <div class="col-6">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "New Account", new_registration_path(resource_name), :class => "btn btn-primary btn", :style => "display:inline;" %>
            <% end %>

            <%- if controller_name != 'sessions' %>
              <%= link_to "Log in", new_session_path(resource_name), :class => "btn btn-primary", :style => "display:inline;" %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>

