
    <div class="row justify-content-md-center collapse" id="editCageFormDiv" style="margin-top:20px;">
        <%= form_for(@cage, url: home_update_cage_path(:id => @cage.id), :method => :patch,  :html => { :style => "border:1px solid skyblue;padding-bottom:10px;padding-top:10px;min-width:50%;" } ) do |f| %>
            <div class="col-12">
                <div class="row justify-content-md-center">
                    <h4>Edit cage information</h4>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <%= f.label :cage_number, "Cage Number", :class => "col-form-label"%>
                            <%= f.text_field :cage_number, :class => "form-control", :required => true %>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <%= f.label :strain, "Strain", :class => "col-form-label"%>
                            <%= f.text_field :strain, :class => "form-control", :value => @cage.strain, :required => true %> 
                        </div>
                    </div>
                </div>  
                <fieldset class="form-group">
                    <div class="row">
                        <legend class="col-form-label col-sm-3 pt-0">Cage Location</legend>
                        <div class="col-sm-9">
                            <div class="form-check" style="display:inline-block;margin-right:30px;">
                                <%= f.radio_button :location, "sandler", :value => "sandler", :class => "form-check-input" %>
                                <%= f.label :location, "Sandler", :value => "sandler" %>
                            </div>
                            <div class="form-check" style="display:inline-block;">
                                <%= f.radio_button :location, "genentech hall", :value => "genentech hall", :class => "form-check-input" %>
                                <%= f.label :location, "Genentech Hall", :value => "genentech hall" %>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <fieldset class="form-group">
                    <div class="row">
                        <legend class="col-form-label col-sm-3 pt-0">Cage Type</legend>
                        <div class="col-sm-9">
                            <div class="form-check" style="display:inline-block;margin-right:30px;">
                                <%= f.radio_button :cage_type, "single-f", :value => "single-f", :class => "form-check-input", :disabled => @cage.mice.where(sex:2).count > 0 %>
                                <%= f.label :cage_type, "Single F", :value => "single-f" %>
                            </div>
                            <div class="form-check" style="display:inline-block;margin-right:30px;">
                                <%= f.radio_button :cage_type, "single-m", :value => "single-m", :class => "form-check-input", :disabled => @cage.mice.where(sex:1).count > 0 %>
                                <%= f.label :cage_type, "Single M", :value => "single-m" %>
                            </div>
                            <div class="form-check" style="display:inline-block;">
                                <%= f.radio_button :cage_type, "breeding", :value => "breeding", :class => "form-check-input", :disabled => @cage.mice.where(sex:2).count > 1 %>
                                <%= f.label :cage_type, "Breeding", :value => "breeding" %>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <fieldset class="form-group">
                    <div class="row">
                        <legend class="col-form-label col-sm-6 pt-0">Remove Cage? <em style="font-size:10pt;">cage must be empty</em></legend>
                        <div class="col-sm-6">
                            <div class="form-check" style="display:inline-block;margin-right:30px;">
                                <%= f.radio_button :in_use, "false", :value => "false", :class => "form-check-input", :disabled => @cage.mice.where(removed:nil).count > 0 %>
                                <%= f.label :in_use, "Yes", :value => false %>
                            </div>
                            <div class="form-check" style="display:inline-block;">
                                <%= f.radio_button :in_use, "true", :value => "true", :class => "form-check-input", :disabled => @cage.mice.where(removed:nil).count > 0 %>
                                <%= f.label :in_use, "No", :value => true %>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <% if @cage.errors %>
                    <div class="row">
                        <div class="col-6">
                            <ul>
                            <% @cage.errors.full_messages.each do |m| %>
                                <li><%= m %></li>
                                <% end %>
                            </ul>
                        </div>
                    </div>
                <% end %>
                <div class="row justify-content-md-center"> 
                    <div class="actions">
                        <%= f.submit "Save Changes", :class => "btn btn-primary btn-block" %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>