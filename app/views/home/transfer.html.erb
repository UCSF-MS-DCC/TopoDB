<div class="container-fluid">
    <div class="row justify-content-md-center">
        <h2>Transfer Mice</h2>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-8">
            <select id="sourceCageUpdateSelect">
                <% Cage.all.each do |cg| %>
                    <option value="<%= cg.id %>"><%= cg.cage_number %></option>
                <% end %>
            </select>
            
            <ul style="list-style-type:none;border:1px solid grey;">
                <% @source.mice.each do |m| %>
                    <li><%= m.designation %></li>
                <% end%>
            </ul>
        <ul style="list-style-type:none;">
        </ul>
        </div>
    </div>
</div>