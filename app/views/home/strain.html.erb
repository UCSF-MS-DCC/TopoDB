<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3"  style="margin-top:10px;">
            <h1 class="text-center"><%= @strain2 == nil ? @strain : "#{@strain} / #{@strain2}" %></h1>
            <hr>
            <div style="height:250px;">
                <canvas id="sex-chart">
                </canvas>
            </div>
            <hr>
            <div style="height:325px;">
                <canvas id="age-chart">
                </canvas>
            </div>
            <button class="btn btn-primary btn-block" style="margin-top:10px;" type="button" data-toggle="collapse" data-target="#newCageForm" aria-expanded="false">Add New Cage</button>
         </div>

        <div class="col-sm-9"  style="margin-top:50px;padding-left:50px;">
            <%= render 'home/partials/new_cage_form' %>
            <table id="strain-datatable" data-source="<%= home_strain_path(format: :json, strain: @strain, strain2: @strain2) %>" class='table table-bordered table-striped' >
                <thead>
                    <tr>
                        <th>Cage Number</th>
                        <th>Location</th>
                        <th>Type</th>
                        <th>Genotype</th>
                        <th>Dates of birth</th>
                        <th># mice</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
