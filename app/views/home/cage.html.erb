<div class="container">
    <% if !current_user %> 
        <div class="row justify-content-md-center" style="margin-top:2%;">
           <span>UCSF Multiple Sclerosis Genetics Research Laboratory Mouse Database</span>
            <%= image_tag("lab-mouse-vector", :style => "margin-top:5%;") %>
        </div>
    <% else %>
        <%= render 'home/partials/cage_breadcrumb.html.erb' %>
        <div class="row justify-content-md-center">
            <div class="col-5" style="padding-left:25px;margin-top:25px;">
                <h1>Cage <%= @cage.cage_number %></h1>
                <table>
                    <tr>
                        <th>Strain:</th>
                        <td><% if @cage.strain2 == nil || @cage.strain2 == "" %>
                                <%= link_to @cage.strain, home_strain_path(strain: @cage.strain, location: @location) %>
                            <% else %>
                                <%= link_to "#{@cage.strain}/#{@cage.strain2}", home_strain_path({:strain => "#{@cage.strain}_#{@cage.strain2}", :location => @location}) %>
                            <% end %>
                        </td>
                        <th>Type:</th>
                        <td> <%= @cage.cage_type %></td>
                    </tr>
                    <tr>
                        <th>Genotype:</th>
                        <% @null_vals = [nil, "", "0"]%>
                        <td>
                            <% if @null_vals.include?(@cage.genotype) && @null_vals.include?(@cage.genotype2) %>
                                <%= "" %>
                            <% elsif !@null_vals.include?(@cage.genotype) && @null_vals.include?(@cage.genotype2) && !@null_vals.include?(@cage.strain2) %>
                                <%= "#{@gts[@cage.genotype.to_i]} | NA" %>
                            <% elsif !@null_vals.include?(@cage.genotype) && @null_vals.include?(@cage.genotype2) && @null_vals.include?(@cage.strain2) %>
                                <%= @gts[@cage.genotype.to_i] %>
                            <% elsif @null_vals.include?(@cage.genotype) && !@null_vals.include?(@cage.genotype2) %>
                                <%= "NA | #{@gts[@cage.genotype2.to_i]}" %>
                            <% else %>
                                <%= "#{@gts[@cage.genotype.to_i]} | #{@gts[@cage.genotype2.to_i]}"%>
                            <% end %>
                        </td>
                        <th>Location:</th>
                        <td><%= @cage.location.capitalize %></td>
                    </tr>
                </table>
            </div>
            <div class="col-7 hide-on-print" style="margin-top:25px;">
                <div id="cage-timeline"></div>
            </div>
        </div>
 
        <div class="row hide-on-print" style="margin-top:20px;">
            <div class="col-11">
                <button class="btn btn-sm btn-primary" data-toggle="collapse" data-target="#editCageFormDiv" type="button" aria-expanded=false>Edit Cage Information</button>
                <% if @cage.cage_type == "breeding" %>
                    <button class="btn btn-sm btn-primary" data-toggle="collapse" data-target="#recordNewPupsDiv" type="button" aria-expanded=false >Record New Pups</button>
                    <% end %>
                <%= link_to 'Print Table', home_strain_path(:strain => @cage.strain), :onclick => 'window.print();return false;', :class => "btn btn-sm btn-primary"%>
            </div>
        </div>
        <%= render 'home/partials/edit_cage_form' %>
        <%= render 'home/partials/new_pups_form'%>
        <div class="row justify-content-md-center" style="margin-top:20px;">
            <div class="col-12">
            <%= form_tag home_update_mouse_path(:cage => @cage.cage_number), method: :put do %>
                <table id="single-cage-datatable" class="table table-bordered table-striped">
                    <thead>
                        <th class="editableColHeader">Sex</th>
                        <th class="editableColHeader">ID</th>
                        <th class="editableColHeader">Notch</th>
                        <th class="editableColHeader"><%= @cage.strain %></th>
                        <% if @cage.strain2 != "" && @cage.strain2 != nil %><th class="editableColHeader"><%= @cage.strain2 %></th><% end %>
                        <th class="editableColHeader">Birth Cage</th>
                        <th class="editableColHeader">Birth Date</th>
                        <th class="editableColHeader">Tail Cut Date</th>
                        <% if @cage.cage_type == "breeding" %><th class="editableColHeader">Wean Date</th><% end %>
                        <th class="editableColHeader">Transfer To Cage</th>
                        <th class="editableColHeader" id="enableRemoveMice">Remove Mouse</th>
                    </thead>
                    <tbody>
                    <% if @mice.count > 0 %>
                        <% @mice.each do |m| %>
                            <% sx = ["f", "m"][(m.sex.to_i - 1)] %>
                            <tr>
                                <td id="sex-<%= m.id %>" >
                                    <span class="hidden green-check">&#10003;</span>
                                    <%= best_in_place m, :sex, :as => :select, :collection => [[1,"F"], [2,"M"]], :value => m.sex, :html_attrs => { :selected => m.sex }, 
                                    :url => home_update_mouse_path, :param => "mouse-#{m.id}", :class => "editableField highlight-on-success", :activator => "#sex-#{m.id}" %>
                                    <span class="hidden red-x">&#10060;</span>
                                </td>
                                <td id="designation-<%= m.id %>">
                                    <span class="hidden green-check">&#10003;</span>
                                    <%= best_in_place m, :three_digit_code , :as => :input, :url => home_update_mouse_path, :html_attrs => { :size => "9", :maxlength => "8" }, :class => "editableField highlight-on-success", :placeholder => m.three_digit_code,
                                    :default => m.three_digit_code, :value => m.three_digit_code, :param => "mouse-#{m.id}", :activator => "#designation-#{m.id}", :ok_button => "OK" %>
                                    <span class="hidden red-x">&#10060;</span>
                                </td>
                                <td id="ear-punch-<%= m.id %>">
                                    <span class="hidden green-check">&#10003;</span>
                                    <%= best_in_place m, :ear_punch, :as => :select, :collection => [[1,"-"],[2,"N"],[3,"R"],[4,"L"],[5,"RR"],[6,"RL"],[7,"LL"],[8,"RRL"],[9,"RLL"],[10,"RRLL"]], :html_attrs => { :selected => m.ear_punch }, :default => m.ear_punch, 
                                    :url => home_update_mouse_path, :param => "mouse-#{m.id}", :class => "editableField highlight-on-success", :activator => "#ear-punch-#{m.id}" %>
                                    <span class="hidden red-x">&#10060;</span>
                                </td>
                                <td id="genotype-<%= m.id %>">
                                    <span class="hidden green-check">&#10003;</span>
                                    <%= best_in_place m, :genotype, :as => :select, :collection => [[1,"n/a"],[2,"+/+"],[3,"+/-"],[4,"-/-"]], :value => m.genotype, :html_attrs => { :selected => m.genotype }, 
                                    :url => home_update_mouse_path, :param => "mouse-#{m.id}", :class => "editableField highlight-on-success", :activator => "#genotype-#{m.id}" %>
                                    <span class="hidden red-x">&#10060;</span>
                                </td>
                                <% if @cage.strain2 != "" && @cage.strain2 != nil %>
                                    <td id="genotype2-<%= m.id %>">
                                        <span class="hidden green-check">&#10003;</span>
                                        <%= best_in_place m, :genotype2, :as => :select, :collection => [[1,"n/a"],[2,"+/+"],[3,"+/-"],[4,"-/-"]], :value => m.genotype2, :html_attrs => { :selected => m.genotype2 },
                                        :url => home_update_mouse_path, :param => "mouse-#{m.id}", :class => "editableField highlight-on-success", :activator => "#genotype2-#{m.id}" %>
                                        <span class="hidden red-x">&#10060;</span>
                                    </td>
                                <% end %>
                                <td id="birth_cage-<%= m.id %>">
                                    <span class="hidden green-check">&#10003;</span>
                                    <%= best_in_place m, :parent_cage_id , :as => :input, :url => home_update_mouse_path, :html_attrs => { :size => "9", :maxlength => "8"}, :class => "editableField highlight-on-success",              
                                     :default => "TEST", :param => "mouse-#{m.id}", :activator => "#birth_cage-#{m.id}", :ok_button => "OK" %>
                                    <span class="hidden red-x">&#10060;</span>
                                </td>
                                <td id="dob-<%=m.id%>">
                                    <span class="hidden green-check">&#10003;</span><%= best_in_place m, :dob, :as => :date, :html_attrs => { :size => "12" }, 
                                    :url => home_update_mouse_path, :class => "editableField highlight-on-success", :param => "mouse-#{m.id}", :activator => "#dob-#{m.id}" %>
                                    <span class="hidden red-x">&#10060;</span>
                                </td>
                                <td id="tail-cut-cell-<%= m.id %>" >
                                    <span class="hidden green-check">&#10003;</span><%= best_in_place m, :tail_cut_date, :as => :date, :html_attrs => { :size => "12" }, 
                                    :url => home_update_tail_cut_date_path, :class => "editableField highlight-on-success", :param => "mouse-#{m.id}", :activator => "#tail-cut-cell-#{m.id}" %>
                                    <span class="hidden red-x">&#10060;</span>
                                </td>
                                <% if @cage.cage_type == "breeding" %>
                                    <td id="wean-date-<%= m.id %>">
                                        <span class="hidden green-check">&#10003;</span><%= best_in_place m, :weaning_date, :as => :date, :html_attrs => { :size => "12" }, 
                                        :url => home_update_mouse_path, :class => "editableField highlight-on-success", :param => "mouse-#{m.id}", :activator => "#wean-date-#{m.id}" %>
                                        <span class="hidden red-x">&#10060;</span>
                                    </td>
                                <% end %>
                                <td id="transfer-<%= m.id %>">
                                    <% @genotypes = %w(\  n/a +/+ +/- -/-)%>
                                    <% @target_cages = @null_vals.include?(m.strain2) ? Cage.where(strain:m.strain).where(strain2:[nil,""]).where(cage_type:["breeding", "single-#{sx}", "experiment"]).where(in_use:true) : Cage.where(strain:m.strain).where(strain2:m.strain2).where(cage_type:["breeding", "single-#{sx}"]).where(in_use:true) %>
                                    <% @target_cage_list = @target_cages.map{ |cg| ["#{@cage.id}->#{cg.id}", "#{cg.strain} #{@genotypes[cg.genotype.to_i]}: #{cg.cage_number} (#{cg.cage_type})"] }.push(["#{@cage.id}->#{@cage.id}", "CANCEL TRANSFER"]) %>
                                    <span class="hidden green-check">&#10003;</span>
                                    <%= best_in_place m, :cage_id, :as => :select, 
                                    :collection => @target_cage_list,
                                    :html_attrs => { :selected => m.cage.cage_number }, :url => home_update_mouse_cage_path, :param => "mouse-#{m.id}", :class => "editableField highlight-on-success", :activator => "#transfer-#{m.id}"%>
                                    <span class="hidden red-x">&#10060;</span>
                                </td>
                                <td id="remove-<%=m.id%>">
                                    <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#removeMouseModal"
                                     data-dependencies='{"mouseid":"<%=m.id%>","mousesex":<%= ((["",nil,"-"].include? m.sex) ? 0 : m.sex) %> ,"mousedgn":"<%= ((["",nil,"-"].include? m.designation) ? 'N/A'.to_s : m.designation) %>",
                                     "mouseearpunch":"<%=((["",nil,"-"].include? m.ear_punch) ? 'N/A'.to_s : m.ear_punch )%>", "mousecage":"<%=m.cage.cage_number%>", "mousedob":"<%= m.dob %>"}' >
                                        Remove 
                                    </button>
                                </td>
                            </tr>
                        <% end %>
                    <% else %>
                        <tr>
                            <td colspan="15"><h3 class="text-center">Cage is empty</h3></td>
                        </tr>
                    <% end %>
                    </tbody>
                    <tfoot class="hide-on-print">
                        <tr rowspan="2">
                            <td colspan="15"><div style="display:inline-block;height:15px;min-width:15px;border:1px solid black;background-color:lightblue;"></div>&nbsp;&nbsp;indicates column that can be edited. Click on a table cell to edit it. A "-" indicates the field has no set value.<br>
                            <span style="font-size:20px;color:green;">&#10003;</span>&nbsp;&nbsp;Field value successfully updated.<span class="tfoot-red-x">&#10060;</span>&nbsp;&nbsp;Field failed to update</td>
                        </tr>
                    </tfoot>
                </table>                
                <% end %>
            </div>
        </div>
        
    <% end %>
</div>
<%= render 'home/partials/remove_mouse_modal'%>
